<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".EnterCodeActivity">

    <!-- Back Button (Arrow) -->
    <Button
        android:id="@+id/backArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="@string/backbtn5"
        android:textSize="20sp"
        android:textColor="#000000"
        android:backgroundTint="@color/white"/>

    <!-- Title Text -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_the_code_we_just_emailed_you"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        />

    <!-- Code Input Boxes (6 EditTexts) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <!-- Each EditText represents one digit of the code -->
        <EditText
            android:id="@+id/codeInput1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:autofillHints=""
            android:background="@android:drawable/edit_text"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_margin="8dp"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/codeInput2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:autofillHints=""
            android:background="@android:drawable/edit_text"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_margin="8dp"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/codeInput3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:autofillHints=""
            android:background="@android:drawable/edit_text"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_margin="8dp"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/codeInput4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:autofillHints=""
            android:background="@android:drawable/edit_text"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_margin="8dp"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/codeInput5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:autofillHints=""
            android:background="@android:drawable/edit_text"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_margin="8dp"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/codeInput6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:autofillHints=""
            android:background="@android:drawable/edit_text"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_margin="8dp"
            tools:ignore="LabelFor" />
    </LinearLayout>

    <!-- Next Button -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next3"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#007BFF"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        />

    <!-- Lost Access to Email Text -->
    <Button
        android:id="@+id/lostAccessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="@string/i_lost_access_to_my_email"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"/>

</LinearLayout>
