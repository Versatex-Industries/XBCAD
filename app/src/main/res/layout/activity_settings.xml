<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".ui.activity.SettingsActivity">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/bckbutton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="338dp"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/back_button_desc"
        android:scaleType="fitCenter"
        tools:ignore="ObsoleteLayoutParam,TouchTargetSizeCheck"
        tools:srcCompat="@drawable/backbutton" />

    <!-- Title -->
    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp" />

    <!-- Edit Profile Button -->
    <Button
        android:id="@+id/editProfileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#007BFF"
        android:text="@string/edit_profile_button"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <!-- Messages Button -->
    <Button
        android:id="@+id/messagesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#007BFF"
        android:text="@string/messages_button"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <!-- Change Language Button -->
    <Button
        android:id="@+id/changeLanguageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#007BFF"
        android:text="@string/change_language_button"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <!-- Help and Support Button -->
    <Button
        android:id="@+id/btn_help_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#007BFF"
        android:text="@string/help_support_button"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#007BFF"
        android:text="@string/logout_button"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
</LinearLayout>
