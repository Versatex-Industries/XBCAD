<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:visibility="visible">

    <ImageButton
        android:id="@+id/BackButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/todo"
        android:scaleType="fitCenter"
        android:src="@drawable/backbutton"
        tools:ignore="TouchTargetSizeCheck" />

    <!-- Title Text -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="255dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="90dp"
        android:text="@string/create_your_profile"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="TextSizeCheck" />

    <!-- School Input Label and Field -->
    <TextView
        android:id="@+id/schoolLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/school" />

    <EditText
        android:id="@+id/schoolInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/schoolLabel"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@android:drawable/edit_text"
        android:hint="@string/enter_school_name"
        tools:ignore="Autofill,TextFields,TextContrastCheck" />

    <!-- Subjects Input Label and Field -->
    <TextView
        android:id="@+id/subjectsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/schoolInput"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/subjects" />

    <EditText
        android:id="@+id/subjectsInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/subjectsLabel"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@android:drawable/edit_text"
        android:hint="@string/enter_subjects"
        tools:ignore="Autofill,TextFields,TextContrastCheck" />

    <!-- Class Sections Input Label and Field -->
    <TextView
        android:id="@+id/classSectionsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subjectsInput"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/class_sections" />

    <EditText
        android:id="@+id/classSectionsInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/classSectionsLabel"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@android:drawable/edit_text"
        android:hint="@string/enter_class_sections"
        tools:ignore="Autofill,TextFields,TextContrastCheck" />

    <!-- Next Button -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/classSectionsInput"
        android:layout_marginStart="16dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#007BFF"
        android:text="@string/next2"
        android:textColor="#FFFFFF"
        tools:ignore="TextContrastCheck" />

</RelativeLayout>
